<% modals.each_with_index do |modal, count| %>
<div class="modal fade" id="<%= modal[:id] %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel"><%= modal[:title] %></h4>
      </div>
      <div class="modal-body">

        <div id="myCarousel-<%= count %>" class="carousel slide carousel-fit" data-ride="carousel" data-interval="5000">
          <!-- Indicators -->
          <% if modal[:body].length > 1 %>
          <ol class="carousel-indicators">
            <% modal[:body].each_with_index do |item, index| %>
            <li data-target="#myCarousel-<%= count %>" data-slide-to="<%= index %>" class="<%= 'active' if (index == 0) %>"></li>
            <% end %>
          </ol>
          <% end %>
          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <% modal[:body].each_with_index do |item, index| %>
            <div class="item <%= 'active' if (index == 0) %>">
              <div class="item_content">
                <%= item[:html].html_safe %>
                <% unless item[:caption].nil? || item[:caption].empty? %>
                <p class="caption">
                  <%= item[:caption] %>
                </p>
                <% end %>
                <% unless item[:quote].nil? || item[:quote].empty? %>
                <blockquote>
                  <p>
                    <%= item[:quote] %>
                  </p>
                </blockquote>
                <% end %>
                <div class="spacing"></div>
              </div>
            </div>
            <% end %>
          </div>
          <!-- Controls -->
          <% if modal[:body].length > 1 %>
          <a class="left carousel-control" href="#myCarousel-<%= count %>" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
          </a>
          <a class="right carousel-control" href="#myCarousel-<%= count %>" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>
          <% end %>
          </div>



      </div>
      <div class="modal-footer">
        <%= image_tag modal[:logo][:src], alt: modal[:logo][:alt] %>
        <a href="<%= modal[:link] %>" target="_blank">
          <button type="button" class="btn btn-default">
            View Website
          </button>
        </a>
        <button type="button" class="btn btn-default" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
<% end %>


